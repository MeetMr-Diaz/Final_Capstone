<body>
  <div class="application-container">
    <section class="application-form">
      <form
        id="application-form" action="/apply" method="post">
        <h1>UMKC CSEE GTA/Grader Application</h1>
        <p>
          All applications are due to
          <a href="mailto:umkcsceworkstudy@umkc.edu"
            >umkcsceworkstudy@umkc.edu</a
          >
          All applications are due to CSEE GTA/Grader Application
          <br />
          Spring 2024 Employment no later than 5:00 PM, Friday, October 8th.
        </p>

        <div class="flex">
          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
              <label for="fName">First Name</label>
            </div>
            <input type="text" id="fName" name="fName" class="input" required />
          </div>
          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
            <label for="surname">Surname</label>
            </div>
            <input
              type="text"
              id="surname"
              name="surname"
              class="input"
              required
            />
          </div>
          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
            <label for="studentID">Student ID</label>
            </div>
            <input
              type="text"
              id="studentID"
              name="studentID"
              class="input"
              required
            />
          </div>
          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
            <label for="email">UMKC Email</label>
            </div>
            <input
              type="email"
              id="email"
              name="email"
              class="input"
              required
            />
          </div>
          

          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
              <label for="level">Current Level (BS/MS/PhD)</label>
            </div>
            <select id="level" name="level" class="input" required>
              <option value="" disabled selected> </option>
              <option value="BS">BS</option>
              <option value="MS">MS</option>
              <option value="PhD">PhD</option>
            </select>
          </div>
          
          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
            <label for="graduatingSemester">Graduating Semester</label>
            </div>
            <select id="graduatingSemester" name="graduatingSemester" class="input" required>
              <option value="" disabled selected></option>
              <option value="Spring">Spring</option>
              <option value="Fall">Fall</option>
              <option value="Summer">Summer</option>
            </select>
          </div>


          <div class="box">
            <label for="GPA"
              >UMKC Cumulative GPA (leave blank if first semester is in
              progress)</label
            >
            <input type="text" id="GPA" name="GPA" class="input" />
          </div>

          <div class="box">
            <label for="hours"
              >Hours Completed at UMKC (leave blank if first semester is in
              progress)</label
            >
            <input type="text" id="hours" name="hours" class="input" />
          </div>

          <div class="box">
            <label for="degree">Undergraduate Degree (if applicable)</label>
            <select id="degree" name="degree" class="input" required>
              <option value="" disabled selected></option>
              <option value="N/A">N/A</option>
              <option value="BS">BS</option>
              <option value="MS">MS</option>
              <option value="PhD">PhD</option>
            </select>
          </div>
          

          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
            <label for="major">Current Major (CS/IT/ECE/EE)</label>
            </div>
            <select id="major" name="major" class="input" required>
              <option value="" disabled selected></option>
              <option value="CS">CS</option>
              <option value="IT">IT</option>
              <option value="ECE">ECE</option>
              <option value="EE">EE</option>
            </select>
          </div>
          

          <div class="box">
            <div class="required-label">
              <span class="required">*Required</span>
            <label for="applyingFor">Applying For: (Grader, Lab Instructor, or Both)</label>
            </div>
            <select id="applyingFor" name="applyingFor" class="input" required>
              <option value="" disabled selected></option>
              <option value="Grader">Grader</option>
              <option value="Lab Instructor">Lab Instructor</option>
              <option value="Both">Both</option>
            </select>
          </div>
          
          <div class="box">
            <label for="GTA">International Students ONLY: Are you GTA Certified?</label>
            <select id="GTA" name="GTA" class="input">
              <option value="" disabled selected></option>
              <option value="yes">Yes</option>
              <option value="no">No</option>
            </select>
          </div>
          
<!-- 
          <div class="box">
            <label for="certificationTerm"
              >If so, which term did you complete your certification?</label
            >
            <input
              type="text"
              id="certificationTerm"
              name="certificationTerm"
              class="input"
            />
          </div> -->
          
          <!-- <div class="box">
            <label for="previousDegree"
              >If you have a previous degree from a US Institute, please
              indicate this as that waives GTA certification.</label
            >
            <input
              type="text"
              id="previousDegree"
              name="previousDegree"
              class="input"
            />
          </div> -->
          <div class="box">
            <label for="courses"
              >Courses you could serve as lab instructor or grade for (ex. CS
              201L/CS 5525/ECE 216, etc.)</label
            >
            <textarea
              id="courses"
              name="courses"
              class="input"
              rows="4"
            ></textarea>
          </div>
          

          <button class="btn" type="submit">Submit</button>
        </div>

        <script>
          document
            .getElementById("application-form")
            .addEventListener("submit", function (event) {
              const gtaCertifiedInput = document.getElementById("GTA");
              const applyingForInput = document.getElementById("applyingFor");

              if (applyingForInput.value.toLowerCase() === "grader") {
                // User is applying for a grader position, no need to check GTA certification
                return;
              }

              if (gtaCertifiedInput.value.toLowerCase() === "no") {
                // Display a warning message with two options
                const warningMessage =
                  "You are not GTA certified. Choose an option:\n\n1. Redirect to certification page?\n2. Go back to the jobs list?";
                const userChoice = prompt(warningMessage);

                if (userChoice === "1") {
                  // Redirect the user to the provided link
                  window.location.href =
                    "https://catalog.umkc.edu/general-graduate-academic-regulations-information/international-graduate-student-academic-regulations/#:~:text=International%20graduate%20students%20must%20be,of%20the%20International%20Student%20Affairs.";
                } else if (userChoice === "2") {
                  // User chose to go back to the jobs list
                  window.location.href = "/jobs"; // Update with the correct URL
                }

                event.preventDefault(); // Prevent the form from being submitted immediately
              }
            });
        </script>
        <script>
          // Function to check if a required field is empty
          function isFieldEmpty(field) {
            return field.value.trim() === '';
          }
        
          // Function to toggle visibility of the required class
          function toggleRequiredVisibility(field, isVisible) {
            const requiredLabel = field.parentNode.querySelector('.required');
            if (requiredLabel) {
              requiredLabel.style.display = isVisible ? 'inline' : 'none';
            }
          }
        
          document.addEventListener("DOMContentLoaded", function() {
            // Initially hide all required labels
            const requiredLabels = document.querySelectorAll('.required');
            requiredLabels.forEach(label => {
              label.style.display = 'none';
            });
        
            // Add event listener to the submit button
            document.querySelector('.btn').addEventListener('click', function(event) {
              // Prevent the form from submitting immediately
              event.preventDefault();
        
              let isAllFieldsFilled = true;
        
              // Check each required field
              document.querySelectorAll('.input[required]').forEach(field => {
                if (isFieldEmpty(field)) {
                  // Show the required label if field is empty
                  toggleRequiredVisibility(field, true);
                  isAllFieldsFilled = false;
                } else {
                  // Hide the required label if field is filled
                  toggleRequiredVisibility(field, false);
                }
              });
        
              // Submit the form if all required fields are filled
              if (isAllFieldsFilled) {
                document.getElementById("application-form").submit();
              }
            });
          });
        </script>
        
      </form>
    </section>
  </div>
</body>